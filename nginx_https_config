# HTTP에서 HTTPS로 리다이렉트
server {
    listen 80;
    server_name sohntech.ai.kr www.sohntech.ai.kr 52.79.145.238;
    return 301 https://$server_name$request_uri;
}

# HTTPS 서버 설정
server {
    listen 443 ssl http2;
    server_name sohntech.ai.kr www.sohntech.ai.kr 52.79.145.238;
    
    # SSL 인증서 설정
    ssl_certificate /etc/letsencrypt/live/sohntech.ai.kr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/sohntech.ai.kr/privkey.pem;
    
    # SSL 보안 설정
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # 보안 헤더
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # 고객 스캐너 (프론트엔드 Next.js)
    location /customer-scanner {
        proxy_pass http://localhost:3000/customer-scanner;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # 스캐너 (프론트엔드 Next.js)
    location /scanner/ {
        proxy_pass http://localhost:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # 홈페이지 (랜딩 페이지)
    location / {
        alias /home/ubuntu/showmethestock/landing/;
        index index.html;
        try_files $uri $uri/ /index.html;
    }
    
    # 랜딩 페이지 직접 접근
    location /landing/ {
        alias /home/ubuntu/showmethestock/landing/;
        index index.html;
        try_files $uri $uri/ /landing/index.html;
    }
    
    # 랜딩 페이지 직접 접근
    location = /landing {
        return 301 /landing/;
    }
    
    # 백엔드 API 프록시 (타임아웃 증가)
    location /api/ {
        proxy_pass http://localhost:8010/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 타임아웃 설정 (스캔 작업용)
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        proxy_buffering off;
    }
    
    # 백엔드 API 직접 접근 (개발용)
    location /backend/ {
        proxy_pass http://localhost:8010/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 타임아웃 설정 (스캔 작업용)
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        proxy_buffering off;
    }
}
