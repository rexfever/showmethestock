# Stock Finder 환경 변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 키움 API 설정
APP_KEY=your_kiwoom_app_key_here
APP_SECRET=your_kiwoom_app_secret_here
API_BASE=https://api.kiwoom.com
TOKEN_PATH=/oauth2/token

# 카카오 API 설정
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
NEXT_PUBLIC_KAKAO_CLIENT_ID=your_kakao_client_id_here

# 데이터베이스 설정
DATABASE_URL=sqlite:///./snapshots.db

# 환경 설정
NODE_ENV=development
FORCE_MOCK=false

# 스캔 설정
UNIVERSE_KOSPI=25
UNIVERSE_KOSDAQ=25
OHLCV_COUNT=220

# Tight Preset 설정
MIN_SIGNALS=3
MACD_OSC_MIN=0.0
RSI_MODE=tema
RSI_THRESHOLD=58
GAP_MIN=0.002
GAP_MAX=0.015
EXT_FROM_TEMA20_MAX=0.015
VOL_MA5_MULT=1.8
VOL_MA20_MULT=1.2
MIN_TURNOVER_KRW=1000000000
USE_ATR_FILTER=true
ATR_PCT_MAX=0.04
ATR_PCT_MIN=0.01
MIN_PRICE=2000
ENTRY_COOLDOWN_DAYS=3
TOP_K=15

# 과열 설정
OVERHEAT_RSI_TEMA=70
OVERHEAT_VOL_MULT=3.0

# 카카오 알림 설정
KAKAO_ALIMTALK_API_KEY=your_kakao_alimtalk_api_key
KAKAO_ALIMTALK_SENDER_KEY=your_kakao_alimtalk_sender_key
