# 서버 배포 환경변수 설정
# 사용법: source scripts/deploy.env

# 서버 정보
export SERVER_HOST="sohntech.ai.kr"  # 실제 서버 도메인 또는 IP
export SERVER_USER="ubuntu"          # 서버 사용자명
export SERVER_PATH="/home/ubuntu/showmethestock"  # 서버 프로젝트 경로

# SSH 키 경로 (선택사항)
export SSH_KEY_PATH="~/.ssh/id_rsa"

# 배포 옵션
export DEPLOY_BACKEND=true
export DEPLOY_FRONTEND=true
export RUN_TESTS=true

# 서비스 이름
export BACKEND_SERVICE="stock-finder-backend"
export FRONTEND_SERVICE="stock-finder-frontend"

echo "✅ 서버 배포 환경변수가 설정되었습니다."
echo "서버: $SERVER_HOST"
echo "사용자: $SERVER_USER"
echo "경로: $SERVER_PATH"